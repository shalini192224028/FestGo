<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FestFinder"
        tools:targetApi="31">
        <activity
            android:name=".User.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Admin.AdminDashBoardActivity"
            android:exported="true"></activity>
        <activity
            android:name=".Organizer.OrganizerDashBoardActivity"
            android:exported="true"></activity>
        <activity
            android:name=".User.UserTypeActivity"
            android:exported="false" />
        <activity
            android:name=".User.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".User.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".User.SignLoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".User.UserSideNavActivity"
            android:exported="false" />
        <activity
            android:name=".User.EventListActivity"
            android:exported="false" />
        <activity
            android:name=".User.PaymentFragment"
            android:exported="false" />
    </application>

</manifest>